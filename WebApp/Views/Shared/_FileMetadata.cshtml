@{

}
@model IEnumerable<FileModel>
<p class="bg-black text-white">File Metadata</p>
<table class="centre-left">
    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="@obj.Id" style="display: none">
                <td><span class="badge bg-primary w-100 text-left">File Name:</span></td>
                <td>@obj.Name</td>
            </tr>
            <tr class="@obj.Id" style="display: none">
                <td><span class="badge bg-primary">Created On:</span></td>
                <td>@obj.UpdatedDate.ToString("dd-MM-yy h:mm tt")</td>
            </tr>
            <tr class="@obj.Id" style="display: none">
                <td><span class="badge bg-primary w-100 text-left">Size:</span></td>
                <td>@(obj.Size / 1024) KB</td>
            </tr>

            <tr class="@obj.Id" style="display: none">
                <td><span class="badge bg-primary w-100 text-left">Options:</span></td>
                <td> 
                    <div style="display: flex">
                        <div title="Download">
                            <a href="~/DownloadDelete/DownloadFile?filePath=@obj.Path&fileName=@obj.Name">⬇️</a>
                        </div> 
                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;  
                        <div title="Delete">
                            <a href="~/DownloadDelete/DeleteFile?filePath=@obj.Path&id=@obj.Id">❌</a>
                        </div> 
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>


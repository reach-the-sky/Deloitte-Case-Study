@{
    ViewData["Title"] = "UploadFile";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>UploadFile</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="UploadFile">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" id="myFile" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
    <input name="metadata" type="datetime-local" id="metadata" hidden/>
</form>